<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @post.summary %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h2>Add comments</h2>

<p>
  <%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>
</p>

<h2>Comments</h2>

<% @post.comments.each do |comment| %>
  <p>
    <%= current_user.username %>
    <%= comment.body %>
  </p>
<% end %>
